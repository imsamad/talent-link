{
  "name": "job-board",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "studio": "turbo run studio",
    "clean-x": "turbo run clean-x && rm -rf .turbo node_modules",
    "setup:env": "cp apps/web/.env.example apps/web/.env && cp apps/server/.env.example apps/server/.env && cp packages/db/.env.example packages/db/.env",
    "setup": "docker compose up -d && pnpm setup:env && pnpm i && pnpm db:generate && pnpm dev"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-turbo": "^2.0.12",
    "globals": "^15.9.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.11"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
